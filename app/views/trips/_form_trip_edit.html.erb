
<%= simple_form_for(@trip) do |f| %>
  <%= render 'shared/trip_error_messages' %>

  <%= f.text_field :place, placeholder: "Place", class: 'form-control' %>

  <%= f.text_area :description, placeholder: "Description", rows: "3", class: 'form-control' %>

  <%= f.label :date_from, "From" %>
  <%= f.date_select :date_from,
                    :start_year => Date.today.year %>

  <%= f.label :date_to, "To" %>
  <%= f.date_select :date_to,
                    :start_year => Date.today.year %>

  <%= f.file_field :photo, as: :file, class: 'form-control' %>
  
  <% if f.object.photo? %>
    <%= image_tag f.object.photo.url %>
  <% end %>

  <%= f.submit "Save trip", class: "btn btn-primary" %>

<% end %>

