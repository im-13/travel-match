<% provide(:title, 'Edit trip') %>
<div class="container">
  <br>
  <br>
  <h1><i class="fa fa-suitcase"></i> Edit trip to <%= @trip.country %></h1>
  <br>

	<div class="row">
	  	<div class="col-md-6 col-md-offset-3">
	      <div class="thumbnail">
	        <div class="blog-container-responsive row-space-2">
	          <div class="blog-content">
	            <div class="panel-body">
					<%= render 'trips/form_trip_edit' %>
					<br>
			    	<div class="meta">
						<small>
						    <%= link_to current_user do %><i class="fa fa-user"></i> Back to my profile <% end %> |
						    <%= link_to trips_path do %><i class="fa fa-suitcase"></i> Back to all trips <% end %> |
						    <%= link_to mytrips_path do %><i class="fa fa-suitcase"></i> Back to my trips <% end %> |
						    <%= link_to @trip, method: :delete, data: { confirm: 'Are you sure you want to delete this trip' } do %><span class="glyphicon glyphicon-trash"></span> Delete <% end %> 
						</small>
					</div>
	  			</div>
	          </div>
	        </div>
	      </div>
	  	</div>
	</div>
	
</div>