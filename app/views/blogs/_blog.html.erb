<strong><%= link_to blog.user_name, User.find(blog.user_uuid) %> </strong>
<a class="text-muted link-reset"><%= link_to time_ago_in_words(blog.created_at) + " ago", blog %></a>
<% if current_user.admin? || current_user.uuid == blog.user_uuid %>
| <%= link_to 'Edit', edit_blog_path(blog) %>
| <%= link_to 'Delete', blog, method: :delete, data: { confirm: 'Are you sure you want to delete this blog entry?' } %>
<% end %>
<p><%= blog.content %></p>
<div class="text-center">
	<% if blog.photo? %>
	    <%= link_to image_tag(blog.photo.medium.url), blog %>
	<% end %>
</div>
