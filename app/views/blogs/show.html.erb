<div class="container">
	<p id="notice"><%= notice %></p>
	<% cur = User.find_by(email: @blog.user_email) %>

	<script src="js/navbarVolunteer.js"></script>
	<div class="container target">
		<h1 class="pull-left">
			<br>
			<%= @blog.user_name %>
			<br>
			<small><%= time_ago_in_words(@blog.created_at) + " ago" %></small>
			<br>
			<br>		
		</h1>

		<br>
		<div>
            <% if cur.avatar? %>
              <a class="pull-right"><img title="profile image" class="img-circle img-responsive"<%= image_tag cur.avatar.thumb.url %></a>
            <% else %>
              <a class="pull-right"><img title="profile image" class="img-circle img-responsive"<%= gravatar_for cur %></a>
            <% end %>
        </div>
    </div>
		
	<div class="container">	
		<div class="contailer">	
			<p>
			 	<%= @blog.content %>
			</p>

			<% if @blog.photo? %>
		    	<%= image_tag @blog.photo.medium.url, class: "img=thumbnail" %>
		    <% end %>

		</div>

		<br>
		
		<div class="meta">
	      <%= link_to "Back to all posts", blogs_path, class: 'btn btn-info' %>
	      <%= link_to "Back to my profile", current_user, class: 'btn btn-info' %>
	      <% if cur.admin? || cur == current_user %>
	      	<%= link_to "Edit", edit_blog_path(@blog), class: 'btn btn-info' %> 
	      
	      <%= link_to "Add comment", current_user, class: 'btn btn-success' %>
	      <% end %>
	    </div>
	    <hr>
	    

	    	<% if cur != current_user %>
	    		<div class="thumbnail">
	    			<% if cur.avatar? %>
              			<a class="pull-left"><img title="profile image" class="img-circle img-responsive"<%= image_tag current_user.avatar.small.url %></a>
            		<% else %>
              			<a class="pull-left"><img title="profile image" class="img-circle img-responsive"<%= current_user.gravatar_uml %></a>
            		<% end %>
	    		</div>
	    		<div class="comment-form">
	    			<label for="comment">Comment</label>
	    			<textarea name="comment" name="comment" cols="45" rows="8" </textarea>
		    	</div>
		    	<%= link_to "Add Comment", current_user, class: 'btn btn-success' %>
	
			<% end %>
	</div>

</div>