<li id="post-<%= blog.uuid %>">
  <% if @user.avatar? %>
	<img class="img-circle"<%= image_tag @user.avatar.small.url %></a>
  <% else %>
	<img class="img-circle"<%= image_tag @user.gravatar_url %></a>
  <% end %>
  <span class="user"><%= link_to @user.full_name, @user %></span>
  <span class="content"><%= blog.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(@user.created_at) %> ago.
  </span>
  <% if current_user.admin? || current_user.uuid == blog.user_uuid %>
	<%= link_to 'Edit', edit_blog_path(blog) %>
	| <%= link_to 'Delete', blog, method: :delete, data: { confirm: 'Are you sure you want to delete this blog entry?' } %>
  <% end %>
</li>