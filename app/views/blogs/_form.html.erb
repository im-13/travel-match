  <%= simple_form_for(@blog) do |f| %>
    <% if @blog.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

        <ul>
          <% @blog.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <%= f.text_area :content, placeholder: "Compose your new blog entry here", rows: "10", class: 'form-control' %>
    <%= f.file_field :image, class: 'form-control', placeholder: "No file selected" do |attachment_fields| %>
      <%= attachment_fields.input :image, as: :file %>
      <% if f.object.image? %>
        <%= image_tag f.object.image.url %>
      <% end %>
    <% end %>

    <div>
      <%= f.submit "Post", class: "btn btn-primary" %> 
      <br>
      <%= link_to "View Travel Blog", blogs_path %>
      <br>
      <%= link_to "Back to My Profile", current_user %>
    </div>
<% end %>

