<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Listing Photos</h1>

  <table class="table">
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @carrierwave_images.each do |carrierwave_image| %>
        <tr>
          <td><%= link_to image_tag(carrierwave_image.asset.thumb.url), carrierwave_image %></td>
          <td><%= link_to 'Edit', edit_carrierwave_image_path(carrierwave_image) %></td>
          <td><%= link_to 'Destroy', carrierwave_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New image', new_carrierwave_image_path %>
</div>