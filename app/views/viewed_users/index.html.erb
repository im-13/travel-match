<% provide(:title, 'Whom you have recently viewed?') %>
<div class="container">
	<h1>Whom you have recently viewed?</h1>
	<div class="row">
	    <aside class="col-md-2"></aside>        
		<div class="container col-sm-8">
			<%= will_paginate @viewed_users %>
			<br>
			<br>
			<br>
  			<div class="panel panel-default target">
				<div class="panel-body">
			      	<div class="row">
				        <div class="container">
				            <div class="col-sm-7">
								<ul class="users">
								  	<% if @viewed_users.any? %>
							  			<%= render @viewed_users %>
							  		<% else %>
							  			<div align="center">You haven't viewed any users yet. <%= link_to "Explore!", users_path %></div>
							  		<% end %>
								</ul>	
						 	</div>
				        </div>
      				</div>         
    			</div>
			</div>
			<%= will_paginate @viewed_users %>
		</div>
	</div>
</div>