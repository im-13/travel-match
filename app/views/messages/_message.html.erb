<li class="<%=  self_or_other(message) %>">
  <div class="avatar">
    <!--<img src="http://placehold.it/50x50" />-->
    <% if message_interlocutor(message).avatar? %>
    <img title="profile image" class="img-circle img-responsive"<%= image_tag message_interlocutor(message).avatar.small.url %></a>
    <% else %>
    <img title="profile image" class="img-circle img-responsive"<%= gravatar_for message_interlocutor(message) %></a>
    <% end %>
  </div>
  <div class="chatboxmessagecontent">
    <p><%= message.body %></p>
    <time datetime="<%= message.time_in_coming %>" title="<%= message.time_in_coming %>">
      <%= message_interlocutor(message).full_name %> • <%= message.time_in_coming %>
    </time>
  </div>
</li>