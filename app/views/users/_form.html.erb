<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages' %>

  <%= f.text_field :first_name, placeholder: "First name" %>

  <%= f.text_field :last_name, placeholder: "Last name" %>

  <%= f.email_field :email, placeholder: "Email address" %>
   
  <%= f.password_field :password, placeholder: "Password" %>

  <%= f.password_field :password_confirmation, placeholder: "Re-enter password" %>

  <%= f.label :country_of_residence, "Country of residence" %>
  <%= f.country_select :country_of_residence_code, selected: "US" %>

  <%= f.label :date_of_birth, "Date of birth" %>
  <%= f.date_select :date_of_birth,
                    :start_year => Date.today.year - 120,
                    :end_year => Date.today.year %>

  <%= f.radio_button :gender, 'female' %> Female
  <%= f.radio_button :gender, 'male' %> Male 
  

  <%= f.submit "Create my account", class: "btn btn-primary" %>

<% end %>