<li>
	<!--%= small_avatar_profile_link user, {}, class: 'pull-right' %-->
	<% if user.avatar? %>
        <a class="pull-right"><img class="img-circle img-responsive" <%= image_tag user.avatar.small.url %> </a> 
      <% else %>
          <a class="pull-right"><img title="profile image" class="img-circle img-responsive" <%= image_tag user.gravatar_url %> </a>
      <% end %>
	<%= link_to user.first_name + " " + user.last_name, user %>
	<br>
	<%= user.get_age.to_s + " years old " + user.gender + " from " + user.lives_in(:l).name %>
	<% if current_user.admin? && !current_user?(user) %>
	   | <%= link_to "Delete", user, method: :delete,
	                                  data: { confirm: "Are you sure you want to delete user?" } %>
	<% end %>
</li>
