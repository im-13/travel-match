<% provide(:title, "Update my profile") %>
<h1>Update my profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	<div>
  		<b>Name</b>
	    <%= form_for(@user) do |f| %>
	      <%= render 'shared/error_messages' %>

	      <%= f.label :first_name, 'First' %>
		  <%= f.text_field :first_name %>

		  <%= f.label :last_name, 'Last' %>
		  <%= f.text_field :last_name %>

		  <%= f.submit "Save name", class: "btn btn-primary" %>
	    <% end %>
	</div>

	<div>
		<br />
  		<b>Email</b>
	    <%= form_for(@user) do |f| %>
	      <%= render 'shared/error_messages' %>

	  	  <%= f.email_field :email %>

		  <%= f.submit "Save email", class: "btn btn-primary" %>
	    <% end %>
	</div>

	<div>
		<br />
  		<b>Birthdate</b>
	    <%= form_for(@user) do |f| %>
	      <%= render 'shared/error_messages' %>

	  	  <%= f.date_select :date_of_birth,
	                    	:start_year => Date.today.year - 120,
	                    	:end_year => Date.today.year %>

		  <%= f.submit "Save birthdate", class: "btn btn-primary" %>
	    <% end %>
	</div>

	<div>
		<br />
  		<b>Gender</b>
	    <%= form_for(@user) do |f| %>
	      <%= render 'shared/error_messages' %>

		  <div class="row" >
		      <td> 
		        <%= f.radio_button :gender, 'female' %> Female
		        <%= f.radio_button :gender, 'male' %> Male
		      </td>
		  </div>

		  <%= f.submit "Save gender", class: "btn btn-primary" %>
	    <% end %>
	</div>

	<div>
		<br />
  		<b>Country of residence</b>
	    <%= form_for(@user) do |f| %>
	      <%= render 'shared/error_messages' %>

	  	  <%= f.text_field :country_of_residency %>

		  <%= f.submit "Save country of residence", class: "btn btn-primary" %>
	    <% end %>
	</div>

	<div>
		<br />
  		<b>Countries I visited</b>
	    <%= form_for(@user) do |f| %>
	      <%= render 'shared/error_messages' %>

	  	  <%= f.text_area :country_visited %>

		  <%= f.submit "Save countries I visited", class: "btn btn-primary" %>
	    <% end %>
	</div>

	<div>
		<br />
  		<b>Countries I want to visit</b>
	    <%= form_for(@user) do |f| %>
	      <%= render 'shared/error_messages' %>

	  	  <%= f.text_area :country_to_visit %>

		  <%= f.submit "Save countries I want to visit", class: "btn btn-primary" %>
	    <% end %>
	</div>

	<div>
		<br />
  		<b>Password</b>
	    <%= form_for(@user) do |f| %>
	      <%= render 'shared/error_messages' %>

	      <%= f.label :password, 'New' %>
		  <%= f.password_field :password %>

		  <%= f.label :password_confirmation, "Re-enter new" %>
		  <%= f.password_field :password_confirmation %>

		  <%= f.submit "Save password", class: "btn btn-primary" %>
	    <% end %>
	</div>

	<div>
		<br />
		<b>Profile picture</b>
	    <div class="gravatar_edit">
	      <%= gravatar_for @user %>
	      <a href="http://gravatar.com/emails" target="_blank">Change my profile picture</a>
	    </div>
  	</div>
</div>

