<% provide(:title, "Update my profile") %>
<h1>Update my profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :first_name %>
	  <%= f.text_field :first_name %>

	  <%= f.label :last_name %>
	  <%= f.text_field :last_name %>

	  <%= f.label :email, "Email address" %>
	  <%= f.email_field :email %>

	  <%= f.label :date_of_birth, "Year of birth" %>
	  <%= f.date_select :date_of_birth,
	                    :start_year => Date.today.year - 120,
	                    :end_year => Date.today.year %>

	  <%= f.label :gender %>
	  <div class="row" >
	      <td> 
	        <%= f.radio_button :gender, 'female' %> Female
	        <%= f.radio_button :gender, 'male' %> Male
	      </td>
	  </div>

	  <%= f.label :country_of_residency, "Country of residence" %>
	  <%= f.text_field :country_of_residency %>

	  <%= f.label :country_visited, "countries you've visited" %>
	  <%= f.text_area :country_visited %>

	  <%= f.label :country_to_visit, "countries you want to visit"%>
	  <%= f.text_area :country_to_visit %> 
	   
	  <%= f.label :password %>
	  <%= f.password_field :password %>

	  <%= f.label :password_confirmation, "Re-enter password" %>
	  <%= f.password_field :password_confirmation %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank">change</a>
    </div>
    
  </div>
</div>

